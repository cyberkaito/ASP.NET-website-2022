@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewBag.Source = ViewBag.Genre+"/"+ViewBag.Title+"/Slider";
}
<html lang="en">
    <head>
        <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
        <link href="~/css/site.css" rel="stylesheet" type="text/css"/>
        <link rel="icon" href="~/img/tabIcon.jpg">
        <meta name="viewport" content="width=device-width" />
        <title>BlueBlot | @ViewBag.Title</title>
    </head>
    <body> 
        <nav class="navbar bg-dark navbar-expand-lg fixed-top">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                  <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse px-5" id="navbarSupportedContent">
                  <ul class="navbar-nav me-auto mb-2 mb-lg-0 text-center">
                    <li class="nav-item">
                      <a asp-action="Index" asp-controller="Home" class="nav-link active" aria-current="page">Home</a>
                    </li>
                    <li class="nav-item dropdown">
                      <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">Rock</a>
                      <ul class="dropdown-menu bg-dark">
                        <li><a class="dropdown-item" asp-action="HardRock" asp-controller="Rock">Hard Rock</a></li>
                        <li><a class="dropdown-item" asp-action="SoftRock" asp-controller="Rock">Soft Rock</a></li>
                        <li><a class="dropdown-item" asp-action="Psychedelic" asp-controller="Rock">Psychedelic</a></li>
                        <li><a class="dropdown-item" asp-action="Stoner" asp-controller="Rock">Stoner</a></li>
                        <li><a class="dropdown-item" asp-action="Gothic" asp-controller="Rock">Gothic</a></li>
                        <li><a class="dropdown-item" asp-action="Progressive" asp-controller="Rock">Progressive</a></li>
                        <li><a class="dropdown-item" asp-action="Alternative" asp-controller="Rock">Alternative</a></li>
                      </ul>
                    </li>
                    <li class="nav-item dropdown">
                      <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">Metal</a>
                      <ul class="dropdown-menu bg-dark">
                        <li><a class="dropdown-item" asp-action="Heavy" asp-controller="Metal">Heavy</a></li>
                        <li><a class="dropdown-item" asp-action="Power" asp-controller="Metal">Power</a></li>
                        <li><a class="dropdown-item" asp-action="Metalcore" asp-controller="Metal">Metalcore</a></li>
                        <li><a class="dropdown-item" asp-action="Doom" asp-controller="Metal">Doom</a></li>
                        <li><a class="dropdown-item" asp-action="Death" asp-controller="Metal">Death</a></li>
                        <li><a class="dropdown-item" asp-action="Gothic" asp-controller="Metal">Gothic</a></li>
                        <li><a class="dropdown-item" asp-action="Black" asp-controller="Metal">Black</a></li>
                        <li><a class="dropdown-item" asp-action="Speed" asp-controller="Metal">Speed</a></li>
                        <li><a class="dropdown-item" asp-action="Trash" asp-controller="Metal">Trash</a></li>
                        <li><a class="dropdown-item" asp-action="Symphonic" asp-controller="Metal">Symphonic</a></li>
                      </ul>
                    </li>
                    @{
                        if (HttpContextAccessor.HttpContext.Session.Keys.Contains("AuthUser"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-action="LogOut" asp-controller="Home">Log Out</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-action="JoinIn" asp-controller="Home">Join In</a>
                            </li>
                            <li class="nav-item">
                                <a asp-action="LogIn" asp-controller="Home" class="nav-link" id="alertLogIn">Log In</a>
                            </li>
                        }
                    }
                  </ul>
                </div>
            </div>
        </nav>

    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
      </div>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img src="~/img/@ViewBag.Source/1.jpg" class="d-block w-40" alt="...">
        </div>
        <div class="carousel-item">
          <img src="~/img/@ViewBag.Source/2.jpg" class="d-block w-40" alt="...">
        </div>
        <div class="carousel-item">
          <img src="~/img/@ViewBag.Source/3.jpg" class="d-block w-40" alt="...">
        </div>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
    
    @RenderBody()
        <div class="container-fluid fixed-bottom" id="footer">
          <footer class="d-flex flex-wrap px-5 justify-content-between align-items-center py-3">
            <p class="col-md-4 mb-0 text-muted">© 2022 BlueBlot, Inc</p>

            <ul class="nav col-md-4 justify-content-end list-unstyled d-flex">
              <li class="ms-3"><a class="text-muted" href="https://vk.com/vvebcum"><img height="40px" src="~/img/icon-vk.png" /></a></li>
              <li class="ms-3"><a class="text-muted" href="https://t.me/vvebcum"><img height="40px" src="~/img/icon-tg.png" /></a></li>
            </ul>
          </footer>
        </div>
        <script src="~/js/bootstrap.bundle.min.js" type="text/javascript"></script>
        <script src="~/js/site.js" type="text/javascript"></script>
    </body>
</html>