@model BlueBlotRecords.Models.Cart;
@{
    ViewBag.Title = "Home";
    Layout = "_Layout";
}
<!DOCTYPE html>
<html lang="en">
<body>
    <div class="container" id="cart">
        @if(Model.items.Count == 0){
            <div class="alert alert-danger" role="alert">
                Your cart is empty!
            </div>
        }else{
            <div id="accordion">
                @for (int i = 0; i < Model.items.Count; i++)
                {
                    <div class="card">
                        <div class="row card-header align-items-baseline" id="heading@(i)">
                        <div class="col-6 text-start">
                                <a class="btn btn-primary" data-bs-toggle="collapse" href="#multiCollapseExample@(i)" role="button" aria-expanded="true" aria-controls="multiCollapseExample@(i)">@Model.items[i].Name</a>
                            </div>
                        <div class="col-5 text-end ">
                            <h6 class="mb-0 ">@Model.items[i].Price €</h6>
                        </div >
                            <div class="col-1 text-end">
                                <a href="/Home/RemoveFromCart?ID=@i">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="50%" fill="currentColor" class="bi bi-x-square" viewBox="0 0 16 16">
                                        <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                                        <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
                                    </svg>
                                </a>
                        </div>
                    </div>
                        <div class="multi-collapse collapse show" id="multiCollapseExample@(i)">
                            <div class="card card-body">
                                @Model.items[i].Description
                            </div>
                        </div>
                </div>
                }
                <div class="card">
                    <div class="row card-header align-items-baseline">
                        <div class="col-6 text-start">
                            Total cost: @Model.finalPrice €
                        </div>
                        <div class="col-5 text-end">
                            <a href="/Home/RemoveAllFromCart" class="btn btn-outline-danger">Clear basket</a>
                        </div>
                        <div class="col-1 text-end">
                            <a href="~/home/Order" class="btn btn-outline-success">Success</a>
                        </div>
                    </div>
                </div>
                
            </div>
        }
    </div>    
</body>
</html>